<%- include ("partials/header") %>

    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label class="form-label" for="postTitle">Title</label><br>
            <input class="form-control" type="text" name="postTitle" id="postTitle"><br>
            <label class="form-label" for="postBody">Post</label><br>
            <textarea class="form-control" name="postBody" id="postBody" cols="30" rows="10"></textarea><br>
        </div>
        <button class="btn btn-primary" type="submit">Publish</button>
    </form>

    <%- include("partials/footer") %>